<%- include header %>
<%= post.title %>
<form method="post">
	标题；<br>
	<input type="text" name="title" value="<%= post.title %>" disabled="disabled"><br>    <!-- input的disabled属性。 当 input 元素加载时禁用此元素。-->
	标签：<br>
	<input type="text name="tag1" value="<%= post.tags[0] %>" disabled="disabled">
	<input type="text name="tag2" value="<%= post.tags[1] %>" disabled="disabled">
	<input type="text name="tag3" value="<%= post.tags[2] %>" disabled="disabled">
	正文：<br>
	<textarea name="post" cols="100" rows="20"><%= post.post %></textarea><br>
	<input type="submit" value="保存修改">
</form>
<%- include footer %>